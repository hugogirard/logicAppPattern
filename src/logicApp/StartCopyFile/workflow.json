{
    "definition": {
        "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
        "actions": {
            "Initialize_variable_filename": {
                "type": "InitializeVariable",
                "inputs": {
                    "variables": [
                        {
                            "name": "filename",
                            "type": "string",
                            "value": "@triggerBody()?['filename']"
                        }
                    ]
                },
                "runAfter": {}
            },
            "Condition": {
                "type": "If",
                "expression": {
                    "and": [
                        {
                            "equals": [
                                "@triggerBody()?['operation']",
                                "function"
                            ]
                        }
                    ]
                },
                "actions": {
                    "HTTP": {
                        "type": "Http",
                        "inputs": {
                            "method": "POST",
                            "uri": "@appsetting('function_url')",
                            "body": {
                                "filename": "@variables('filename')"
                            }
                        },
                        "runAfter": {},
                        "operationOptions": "DisableAsyncPattern"
                    }
                },
                "runAfter": {
                    "Initialize_variable_filename": [
                        "Succeeded"
                    ]
                },
                "else": {
                    "actions": {
                        "Create_a_pipeline_run": {
                            "type": "ApiConnection",
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "referenceName": "azuredatafactory"
                                    }
                                },
                                "method": "post",
                                "body": {
                                    "filename:": "@variables('filename')"
                                },
                                "path": "/subscriptions/@{encodeURIComponent(appsetting('WORKFLOWS_SUBSCRIPTION_ID'))}/resourcegroups/@{encodeURIComponent(appsetting('WORKFLOWS_RESOURCE_GROUP_NAME'))}/providers/Microsoft.DataFactory/factories/@{encodeURIComponent(appsetting('AZURE_DATA_FACTORY_NAME'))}/pipelines/@{encodeURIComponent('CopyPipeline')}/CreateRun",
                                "queries": {
                                    "x-ms-api-version": "2017-09-01-preview"
                                }
                            },
                            "runAfter": {}
                        }
                    }
                }
            }
        },
        "triggers": {
            "manual": {
                "type": "Request",
                "kind": "Http",
                "inputs": {
                    "schema": {
                        "type": "object",
                        "properties": {
                            "filename": {
                                "type": "string"
                            },
                            "operation": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "contentVersion": "1.0.0.0",
        "outputs": {}
    },
    "kind": "Stateful"
}